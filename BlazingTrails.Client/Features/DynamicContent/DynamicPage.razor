@page "/word"

@foreach(var word in _greetings)
{
    <p>@word</p>
}

@code {
    List<string> _greetings = new List<string>();

    protected override async Task OnInitializedAsync()
    {
        _greetings.Add("Welcome");

        await Task.Delay(1000);
        _greetings.Add("to");
        StateHasChanged();

        await Task.Delay(1000);
        _greetings.Add("Blazor in Action");
    }
}
